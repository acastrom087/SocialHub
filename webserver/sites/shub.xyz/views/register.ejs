<%- include('layouts/head.ejs') -%>
</head>

<body>
    <%- include('layouts/nav.ejs') -%>
    <section class="py-5">
        <div class="py-5 d-flex justify-content-center">
            <div class="w-25">
                <form class="needs-validation" novalidate>
                    <h1 class="h3 mb-3 py-4 fw-normal text-center">Registration form</h1>
                    <div class="form-floating py-1">
                        <input id="validationCustomName" type="text" class="form-control" name="name"
                            placeholder="Fullname" required onChange={handleChange} />
                        <label for="validationCustomName">Name</label>
                    </div>
                    <div class="form-floating py-1">
                        <input type="text" class="form-control" name="surname" placeholder="Surname" required
                            onChange={handleChange} />
                        <label>Surname</label>
                    </div>
                    <div class="form-floating py-1">
                        <input type="text" class="form-control" name="email" placeholder="Email" required
                            onChange={handleChange} />
                        <label>Email</label>
                    </div>
                    <div class="form-floating py-1">
                        <input type="password" class="form-control" name="password" placeholder="Password" required
                            onChange={handleChange} />
                        <label>Password</label>
                    </div>
                    <div class="form-floating py-1">
                        <input type="date" class="form-control" name="birthday" placeholder="Birthday" required
                            onChange={handleChange} />
                        <label>Date of birth</label>
                    </div>
                    <div class="form-floating py-1">
                        <select id="gender" name="gender" class="form-control" required onChange={handleChange}>
                            <option>Choose your gender</option>
                            <option value="Female">Female</option>
                            <option value="Male">Male</option>
                        </select>
                    </div>
                    <div class="py-4">
                        <button class="w-100 btn btn-lg btn-dark" type="button" onClick={submit}>Sign up</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <%- include('layouts/footer.ejs') -%>